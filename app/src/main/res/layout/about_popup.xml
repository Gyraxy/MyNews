<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/about_popup_width"
    android:layout_height="@dimen/about_popup_height"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/about_popup_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/about_popup_app"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/about_popup_made_by"/>

</LinearLayout>